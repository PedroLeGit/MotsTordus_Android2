<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".vue.questions">

    <Button
        android:id="@+id/btn_validerquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/style_bouton"
        android:text="Valider"
        android:textColor="@color/Style_blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/lbl_question_titre"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Style_bouton"
        android:text="Question numéro 1 "
        android:textAlignment="center"
        android:textColor="@color/Style_blanc"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="369dp"
        android:layout_height="404dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_question_question">

        <RadioButton
            android:id="@+id/rbtn_choix1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nestor"
            android:textColor="@color/Style_blanc"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbtn_choix2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hector"
            android:textColor="@color/Style_blanc"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbtn_choix3"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Henri"
            android:textColor="@color/Style_blanc"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/lbl_question_question"
        android:layout_width="394dp"
        android:layout_height="113dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Quel est le nom de ce fidèle serviteur du capitaine Haddock ?"
        android:textColor="@color/Style_blanc"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_question_titre" />

    <Button
        android:id="@+id/btn_question_indice"
        android:layout_width="111dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/style_bouton"
        android:text="Un indice ?"
        android:textColor="@color/Style_blanc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_validerquestion"
        app:layout_constraintVertical_bias="0.578" />

</android.support.constraint.ConstraintLayout>